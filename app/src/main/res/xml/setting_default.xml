<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:key="notifications_category"
        app:title="基础设置">
        <EditTextPreference
            app:key="name"
            app:title="Name" />

        <SwitchPreferenceCompat
            app:key="one_hand"
            app:title="单手模式" />


        <ListPreference
            android:defaultValue="true"
            android:key="area"
            android:title="Area"
            app:entries="@array/setting_area_key"
            app:entryValues="@array/setting_area_value" />
    </PreferenceCategory>

    <PreferenceCategory
        app:key="other"
        app:title="关于与帮助">
        <SwitchPreferenceCompat
            app:key="boom"
            app:summary="开启该模式进行自爆"
            app:title="自动爆炸" />

    </PreferenceCategory>
</PreferenceScreen>